import javax.swing.*;

class outer {
	
	outer(){
		
		inner objInner = new inner();
		objInner.display();
		
	}



	String fname;

	private class inner{
		
		
		void display(){
			
			JOptionPane ob = new JOptionPane();
			

			fname = ob.showInputDialog(null, "Type in your first name: ");
				int i;
				i=1;
			while(i<=10)
			{
				System.out.println("Hello "+fname);
				i++;
				
			}
		}
		
	}
}

class Main{
	
	public static void main(String[] args){
		
		outer objOuter = new outer();
		
	}
}
	
